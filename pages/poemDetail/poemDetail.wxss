/* poemDetails.wxss */  
.poem-details-page {  
  padding: 20rpx;  
  width: 100vw;  
  height: 100vh;  
  background-size: cover;  
  background-position: center;  
  background-color: #f0f0f096; /* 设置背景颜色为浅灰色半透明 */  
  display: flex; /* 将页面设置为 Flex 容器 */  
  flex-direction: column;  /* 设置弹性子元素的方向为垂直排列 */  
}  
.poem-content-page {  
  display: flex;  
  flex-direction: column;  
}  
.poem-header {  
  display: flex;  
  flex-direction: column;  
  align-items: center;  
}  
  
.poem-title {  
  font-size: 40rpx;  
  font-weight: bold;  
  margin-top: 20rpx; 
  margin-bottom: 20rpx;  
}  
  
.poem-author {  
  font-size: 30rpx; 
  position: relative;
  right: -150rpx;
}  
  
.poem-content {  
  margin-top: 20rpx;  
  /* margin-left: 160rpx;  
  margin-right: 160rpx;   */
  font-size: 35rpx;  
  line-height: 1.8;  
  margin-bottom: 20rpx;  
  text-align: center;  
}  
 
.poem-yiwen-title {  
  margin-top: 30rpx;  
  font-size: 30rpx;   
  font-weight: bold;  
  color: rgb(184, 111, 111);  
  margin-bottom: 10rpx;  
  margin-left: 10rpx;  
}  
.poem-yiwen {  
  margin-top: 10rpx;  
  font-size: 30rpx;  
  color: #666;  
  margin-bottom: 20rpx;    
  margin-right: 40rpx;   
  margin-left: 10rpx; 
}