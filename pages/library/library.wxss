/* pages/library/library.wxss */

.container {    
  display: flex;    
  background-color: #f0f0f096; /* 设置背景颜色为浅灰色半透明 */    
  height: 100vh; /* 设置容器高度为视口高度 */    
  width: 100%;  
  padding-left: 80rpx; /* 保留左侧内边距 */  
  padding-top: 80rpx; /* 移除顶部内边距 */  
  padding-right: 80rpx; /* 可以根据需要添加右侧内边距 */  
  padding-bottom: 80rpx; /* 可以根据需要添加底部内边距 */  
}

.category-container {  
  display: flex;  
  flex-wrap: wrap;  
  justify-content: space-between; /* 根据需要调整元素之间的间距 */  
}  
  
.category-name {  
  flex-basis: calc(50% - 30rpx); /* 假设你希望元素之间有10rpx的间距 */  
  margin-bottom: 30rpx; /* 减小元素之间的垂直间距 */    
  font-size: 35rpx;
  background-color: rgb(236, 233, 233);
  border-radius: 20rpx; /* 设置圆角大小 */  
  display: flex; /* 使用flex布局使内容居中 */  
  justify-content: center; /* 水平居中 */  
  align-items: center; /* 垂直居中 */ 
  padding-top: 10rpx;
  padding-bottom: 10rpx;
}


.error-container {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  justify-content: center;
  align-items: center;
}

.error-text {
  color: red;
  font-weight: bold;
}